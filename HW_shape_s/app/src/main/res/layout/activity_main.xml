<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvCreateaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0A29DA"
        android:text="Create account"
        android:gravity="center"
        android:fontFamily="@font/quikhand"
        android:textSize="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="633dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@+id/tvCreateaccount">

        <EditText
            android:id="@+id/edFirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:hint="First Name"
            android:fontFamily="@font/quikhand"
            android:inputType="text"
            android:background="@drawable/input_selector"
            android:textColor="#fff"
            android:textColorHint="#0C0B0B"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edLastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_selector"
            android:gravity="center"
            android:fontFamily="@font/quikhand"
            android:hint="last Name"
            android:inputType="text"
            android:textColor="#fff"
            android:textColorHint="#0C0B0B"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edYouremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:hint="Your Email"
            android:fontFamily="@font/quikhand"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_selector"
            android:textColor="#fff"
            android:textColorHint="#0C0B0B"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edReemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:background="@drawable/input_selector"
            android:hint="Re-enter Email"
            android:fontFamily="@font/quikhand"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textColorHint="#0C0B0B"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/edNewpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:background="@drawable/input_selector"
            android:hint="New Password"
            android:fontFamily="@font/quikhand"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#0C0B0B"
            android:textSize="22dp" />

        <RadioGroup
            android:id="@+id/rdGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Female"
                android:fontFamily="@font/quikhand"
                android:textStyle="bold"
                android:textColor="#000"
                android:background="@drawable/input_selector"
                android:textSize="22dp" />

            <RadioButton
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Male"
                android:fontFamily="@font/quikhand"
                android:textColor="#000"
                android:textStyle="bold"
                android:background="@drawable/input_selector"
                android:textSize="22dp" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="469dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/input_selector"
                android:layout_gravity="center"
                android:text=" dd/mmm/yyyy"
                android:fontFamily="@font/quikhand"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:gravity="left|center"
                android:textStyle="bold"
                android:fontFamily="@font/quikhand"
                android:background="#5FA6C7"
                android:onClick="PickDate"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:text="Pick Date" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="#DD1313"
            android:fontFamily="@font/quikhand"
            android:textSize="23dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:text="Create" />

    </LinearLayout>

</RelativeLayout>